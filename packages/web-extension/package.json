{
	"name": "next-network",
	"description": "Real-time Network Monitoring for Next.js",
	"private": true,
	"version": "1.0.1",
	"type": "module",
	"scripts": {
		"dev": "wxt -p 4435",
		"dev:firefox": "wxt -b firefox -p 4435",
		"build": "wxt build",
		"build:firefox": "wxt build -b firefox",
		"zip": "wxt zip",
		"zip:firefox": "wxt zip -b firefox",
		"compile": "tsc --noEmit",
		"postinstall": "wxt prepare",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"dependencies": {
		"clsx": "^2.1.1",
		"debounce": "^2.2.0",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"tailwind-merge": "^3.3.1"
	},
	"devDependencies": {
		"@tailwindcss/vite": "^4.1.11",
		"@types/react": "^19.1.10",
		"@types/react-dom": "^19.1.7",
		"@wxt-dev/module-react": "^1.1.3",
		"tailwindcss": "^4.1.11",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4",
		"wxt": "^0.20.11"
	}
}
